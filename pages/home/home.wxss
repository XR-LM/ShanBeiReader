.body{
 width: 750px;
}
.body .serch{
  height: 100rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.serch input{
  height: 60rpx;
  line-height: 60rpx;
  width: 580rpx;
  border: 1px solid white;
  border-left: none;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background-color: #fafafa;
  font-size: 13px;
}
.serch image{
   background-color: #fafafa;
  padding: 16rpx 20px 17rpx 10px;
  width: 30rpx;
  height: 30rpx;
  border: 1px solid white;
  border-right: none;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}
.headimage{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.headimage image{
  width: 700rpx;
  height: 200rpx;
}
.discount{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
   margin-top: 50rpx;
  }
  .discount .title{
    width: 750rpx;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .title1{
    height: 30rpx;
    width: 750rpx;
    background: url(http://img0.imgtn.bdimg.com/it/u=1821643156,2104609286&fm=26&gp=0.jpg) no-repeat;
    background-size: 30rpx 30rpx;
    background-position-x: 680rpx;
     line-height: 30rpx;
    font-size: 13px;
    text-align: center;
    letter-spacing: 5rpx;
  }
  .discount{
    width: 750rpx;
  }
  .discount .disbook{
    width: 750rpx;
    height: 300rpx;
    display: flex;
    flex-direction: row;
  }
  .disbook image{
    width: 200rpx;
    height: 250rpx;
    margin-left: 25rpx;
    margin-right: 25rpx;
    margin-top: 20rpx;
