  }
   .discount .bookinfro{
    width: 480rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
  }
  .bookinfro .bookname{
    display: flex;
    flex-direction: column;
  }
  .disbook text:nth-child(1){
    margin-top: 20rpx;
    font-family: 'Courier New', Courier, monospace;
  }
  .disbook text:nth-child(2){
    margin-top: 10rpx;
    font-weight: bold;
  }
  .disbook text:nth-child(3){
    margin-top: 10rpx;
    font-size: 12px;
    color: #646464;
    overflow: hidden;
