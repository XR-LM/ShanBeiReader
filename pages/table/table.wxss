.body{
  height: 1000rpx;
  width: 750rpx;
}
.title{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title text{
  font-size: 12px;
  background: #f3f3f3;
  width: 280rpx;
  border-radius: 25rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #575757
}


.hot{
   width: 750rpx;
  height: 500rpx;
white-space: nowrap;
}
.hot .hotpic{
  display: flex;
  flex-direction: row;
justify-content: center;
align-items: center;
}
.hot .hotpic .list{
  display: inline-block;
    width: 750rpx;
margin-right: -150px;
}
.hot .hotpic .list view{
   display: flex;
   flex-direction: column;
   justify-content: space-around;
   align-items: center;
   border-radius: 5px;
}
.hot .hotpic .list image{
  width: 300rpx;
  height: 400rpx;
  border-radius: 5px;
}

.end{
  width: 750rpx;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.end text{
  width: 500rpx;
  text-align: center;
  height: 60rpx; 
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: bold;
}
.end text:last-child{
  font-size: 12px;
  color: #919191
}